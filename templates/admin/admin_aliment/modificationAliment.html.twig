{% extends 'base.html.twig' %}

{% block title %}Modification{% endblock %}

{% block monTitre %}Modification {{aliment.nom}} {% endblock %}

{% block body %}
{{ form_start(form) }}
    <div class="row">
        <div class="col-6">
            <img src="{{asset('images/' ~ aliment.image)}}" style="width:25%" alt="{{aliment.nom}}">
            <div>{{ form_row(form.image) }}</div>
            <div>{{ form_row(form.nom, {"attr" : {'class':'text-danger'},"label":"Nom de l'aliment"}) }}</div>
        </div>

        <div class="col-6">
            <div>{{ form_row(form.prix) }}</div>
            <div>{{ form_row(form.calorie) }}</div>
            <div>{{ form_row(form.proteine) }}</div>
            <div>{{ form_row(form.glucide) }}</div>
            <div>{{ form_row(form.lipide) }}</div>
        </div>
    </div>
    {{form_widget(form)}}
    <input type="submit" class="btn btn-primary" value="Enregister">
{{form_end(form)}}

{% endblock %}
